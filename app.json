{
  "expo": {
    "entryPoint": "./index.ts",
    "name": "mobilePetsLove",
    "slug": "mobilePetsLove",
    "platforms": ["ios", "android", "web"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "splash": {
      "image": "./src/assets/images/logo.png",
      "justifyContent": "center",
      "alignItems": "center",
      "backgroundColor": '#DFE1F8',
      "width": 300,
      "height": 200
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "packagerOpts": { "sourceExts": [ "json", "ts", "tsx", "tsx"], "config": "metro.config.js" },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./src/images/assets/favicon.png"
    }
  }
}
